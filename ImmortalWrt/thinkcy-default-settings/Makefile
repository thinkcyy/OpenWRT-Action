include $(TOPDIR)/rules.mk

PKG_NAME:=thinkcy-default-settings
PKG_RELEASE:=$(COMMITCOUNT)
PKG_LICENSE:=GPLv3
PKG_LICENSE_FILES:=LICENSE

include $(INCLUDE_DIR)/package.mk

define Package/thinkcy-default-settings
  SECTION:=luci
  CATEGORY:=LuCI
  TITLE:=LuCI support for thinkcy Default Settings
  PKGARCH:=all
  DEPENDS:=+luci
endef

define Package/thinkcy-default-settings/description
	Language Support Packages.
endef

define Build/Compile
endef

define Package/thinkcy-default-settings/install
	$(INSTALL_DIR) $(1)/etc/uci-defaults
	$(INSTALL_BIN) ./files/zzz-thinkcy-default-settings $(1)/etc/uci-defaults/99-thinkcy-default-settings
	$(INSTALL_DIR) $(1)/usr/lib/lua/luci/i18n
	po2lmo ./po/zh-cn/default.po $(1)/usr/lib/lua/luci/i18n/default.zh-cn.lmo
endef

$(eval $(call BuildPackage,thinkcy-default-settings))
